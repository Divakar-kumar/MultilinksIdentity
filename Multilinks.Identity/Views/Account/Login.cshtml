@using Multilinks.Identity.Entities;

@model LoginViewModel
@inject SignInManager<UserEntity> SignInManager

<div class="site-content-center">
   <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-box animated fadeIn">
      <div class="box-header">
         <h4>Log In</h4>
      </div>
      <div class="box-body">
         <div asp-validation-summary="All"  class="form-message"></div>
         <input asp-for="Email" placeholder="Email" autofocus />
         <br />
         <input asp-for="Password" placeholder="Password" autocomplete="off" />
         <br />
         <button name="button" value="login">Login</button>
         <br />
         <span><a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a></span>
      </div>
   </form>
   <div class="text-secondary text-center my-3">
      Not registered?&nbsp;<a asp-controller="Account" asp-action="Register">Create an account</a>
   </div>
</div>

   @section Scripts {
      @await Html.PartialAsync("_ValidationScriptsPartial")
   }
