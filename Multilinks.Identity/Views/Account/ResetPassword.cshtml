
@model ResetPasswordViewModel

<div class="site-content-center">
   <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-box animated fadeIn">
      <div class="box-header">
         <h4>Reset password</h4>
      </div>
      <div class="box-body">
         <div asp-validation-summary="All" class="form-message"></div>
         <input asp-for="Code" type="hidden" />
         <input asp-for="UserId" type="hidden" />
         <input asp-for="Password" placeholder="Password" />
         <br />
         <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
         <br />
         <button type="submit">Submit</button>
      </div>
   </form>
</div>

@section Scripts {
   @await Html.PartialAsync("_ValidationScriptsPartial")
}
