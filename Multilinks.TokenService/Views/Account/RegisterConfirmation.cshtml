@model RegisterConfirmationViewModel

@Html.Hidden("UserId", ViewData["UserId"]);
@Html.Hidden("Code", ViewData["Code"]);

<div class="site-content-center">
   <form asp-controller="Account" asp-action="RegisterConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-box animated fadeIn">
      <div class="box-header">
         <h4>Account details</h4>
      </div>
      <div class="box-body">
         <input asp-for="UserId" type="hidden" value="@ViewData["UserId"]" />
         <input asp-for="Code" type="hidden" value="@ViewData["Code"]" />
         <div asp-validation-summary="All" id="form_message"></div>
         <input asp-for="FirstName" placeholder="First Name" />
         <br />
         <input asp-for="LastName" placeholder="Last Name" />
         <br />
         <input asp-for="Password" placeholder="Password" />
         <br />
         <button type="submit">Save</button>
      </div>
   </form>
</div>

@section Scripts {
   @await Html.PartialAsync("_ValidationScriptsPartial")
}